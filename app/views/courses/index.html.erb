<h1> Courses: </h1>
<h3><%= link_to 'New Course', new_course_path %></h3>
<table>
  <tr>
    <th>Title</th>
    <th>Day or Night</th>
  </tr>

    <% @courses.each do |course| %>
      <tr>
        <td><%= link_to course.title, course_path(course) %></td>
        <% if course.day %>
          <td>Day</td>
        <% else %>
          <td>Night</td>
        <% end %>
        <td><%= link_to 'Delete', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
</table>
